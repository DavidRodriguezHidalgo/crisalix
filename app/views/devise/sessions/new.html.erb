<h2 class="text-2xl">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "my-2"}) do |f| %>
  <div class="block">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block border border-grey-light w-full p-3 rounded mb-4" %>
  </div>

  <div class="block">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "block border border-grey-light w-full p-3 rounded mb-4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex justify-between">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions flex justify-end">
    <%= f.submit "Log in", class: "bg-blue-300 text-white p-2 border border-blue-500 rounded-lg" %>
  </div>
<% end %>

<div class="flex flex-col">
  <%= link_to "Register as a patient", new_patient_registration_path, class: "text-blue-400" %>
  <%= render "devise/shared/links" %>
</div>
