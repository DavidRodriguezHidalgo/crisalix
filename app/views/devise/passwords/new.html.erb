<h2 class="text-2xl">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "my-2" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block border border-grey-light w-full p-3 rounded mb-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "bg-blue-300 text-white p-2 border border-blue-500 rounded-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
