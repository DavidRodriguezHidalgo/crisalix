<navbar class="w-full bg-teal-500 text-teal-800 px-5 py-3 mb-2">
  <% if user_signed_in?  %>
    <%= link_to "Home", root_path, class: "mx-2" %>
    <% if current_user.patient?  %>
      <%= link_to "Directory", new_appointment_path, class: "mx-2" %>
    <% end %>
    <%= link_to "My profiles", profile_path, class: "mx-2" %>
    <%= link_to "Log out", destroy_user_session_path, method: 'delete', class: "mx-2" %>
  <% else %>
    <%= link_to "Log in", new_user_session_path, class: "mx-2" %>
  <% end %>
</navbar>